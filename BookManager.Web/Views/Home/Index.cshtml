@model IEnumerable<BookManager.ViewModels.Book.BookViewModel>


@{
	ViewData["Title"] = "Начало";
}

<div class="text-center mb-5">
	<h1 class="display-4">Добре дошли в BookManager!</h1>
	<p class="text-muted">📚 Ето най-новите книги в библиотеката:</p>
</div>

@if (!Model.Any())
{
	<p class="text-muted text-center">Все още няма книги.</p>
}
else
{
	<div class="row justify-content-center">
		@foreach (var book in Model)
		{
			<div class="col-md-4 mb-4">
				<div class="card h-100 shadow-sm">
					<img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;">
					<div class="card-body">
						<h5 class="card-title">@book.Title</h5>
						<p class="card-text"><strong>Автор:</strong> @book.Author</p>
						<p class="card-text"><strong>Жанр:</strong> @book.Genre</p>
						<p class="card-text"><strong>Издателство:</strong> @book.Publisher</p>
						<p class="card-text">@book.Description?.Substring(0, Math.Min(book.Description.Length, 100))...</p>
					</div>
				</div>
			</div>
		}
	</div>
}