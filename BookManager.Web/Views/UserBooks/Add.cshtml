@model BookManager.ViewModels.UserBooks.UserBookListViewModel

@{
	ViewData["Title"] = "Добави в дневника";
}

<h2 class="mb-4">Добави книга в дневника</h2>

<form asp-action="Add" method="post">
	<input type="hidden" asp-for="BookId" />

	<div class="form-group">
		<label>Книга:</label>
		<p><strong>@ViewBag.BookTitle</strong></p>
	</div>

	<div class="form-group">
		<label asp-for="StartDate"></label>
		<input asp-for="StartDate" type="date" class="form-control" />
		<span asp-validation-for="StartDate" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="EndDate"></label>
		<input asp-for="EndDate" type="date" class="form-control" />
		<span asp-validation-for="EndDate" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Rating"></label>
		<select asp-for="Rating" class="form-control">
			<option value="1">⭐</option>
			<option value="2">⭐⭐</option>
			<option value="3">⭐⭐⭐</option>
			<option value="4">⭐⭐⭐⭐</option>
			<option value="5">⭐⭐⭐⭐⭐</option>
		</select>
		<span asp-validation-for="Rating" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-success mt-3">Добави</button>
</form>