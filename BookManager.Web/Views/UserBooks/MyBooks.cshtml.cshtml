@model IEnumerable<BookManager.ViewModels.UserBooks.UserBookListViewModel>

@{
	ViewData["Title"] = "Моят читателски дневник";
}

<h2 class="mb-4">📘 Моят читателски дневник</h2>

@if (!Model.Any())
{
	<p>Все още нямаш добавени книги в дневника си.</p>
}
else
{
	<table class="table table-bordered table-striped">
		<thead>
		<tr>
			<th>Заглавие</th>
			<th>Начало</th>
			<th>Край</th>
			<th>Рейтинг</th>
			<th>Четене (дни)</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var book in Model)
		{
			<tr>
				<td>@book.Title</td>
				<td>@book.StartDate.ToShortDateString()</td>
				<td>@book.EndDate.ToShortDateString()</td>
				<td>@book.Rating / 5</td>
				<td>@book.DaysRead дни</td>
			</tr>
		}
		</tbody>
	</table>
}