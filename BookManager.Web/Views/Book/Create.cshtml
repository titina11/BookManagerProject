@model BookManager.ViewModels.Book.CreateBookViewModel


@{
	ViewData["Title"] = "Добави нова книга";
}

<h2>Добави нова книга</h2>

<form asp-action="Create" method="post">
	<div class="form-group">
		<label asp-for="Title"></label>
		<input asp-for="Title" class="form-control" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
	</div>

	<div class="form-group">
		<label asp-for="ImageUrl"></label>
		<input asp-for="ImageUrl" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="AuthorId"></label>
		<select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(Model.Authors, "Id", "Name"))"></select>
	</div>
	<div class="form-group">
		<label asp-for="NewAuthorName"></label>
		<input asp-for="NewAuthorName" class="form-control" placeholder="Въведи нов автор, ако не е в списъка" />
	</div>

	<div class="form-group">
		<label asp-for="GenreId"></label>
		<select asp-for="GenreId" class="form-control" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))"></select>
	</div>
	<div class="form-group">
		<label asp-for="NewGenreName"></label>
		<input asp-for="NewGenreName" class="form-control" placeholder="Въведи нов жанр, ако не е в списъка" />
	</div>

	<div class="form-group">
		<label asp-for="PublisherId"></label>
		<select asp-for="PublisherId" class="form-control" asp-items="@(new SelectList(Model.Publishers, "Id", "Name"))"></select>
	</div>
	<div class="form-group">
		<label asp-for="NewPublisherName"></label>
		<input asp-for="NewPublisherName" class="form-control" placeholder="Въведи ново издателство, ако не е в списъка" />
	</div>


	<button type="submit" class="btn btn-success mt-3">Запиши</button>
</form>