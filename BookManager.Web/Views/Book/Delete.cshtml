@model BookManager.ViewModels.Book.BookViewModel
@{
	ViewData["Title"] = "Изтрий книга";
}

<h2>Изтриване на книга</h2>

<div class="alert alert-danger">
	Сигурни ли сте, че искате да изтриете <strong>@Model.Title</strong>?
</div>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Да, изтрий</button>
	<a asp-action="All" class="btn btn-secondary">Отказ</a>
</form>