@model IEnumerable<BookManager.ViewModels.Book.BookViewModel>
@{
	ViewData["Title"] = "Всички книги";
}

<div class="d-flex justify-content-between align-items-center mb-4">
	<h2>📚 Всички книги</h2>
	<a asp-controller="Book" asp-action="Create" class="btn btn-success">➕ Добави нова книга</a>
</div>

@if (!Model.Any())
{
	<p class="text-muted">Няма налични книги.</p>
}
else
{
	<div class="row">
		@foreach (var book in Model)
		{
			<div class="col-md-4 mb-4">
				<div class="card h-100">
					<img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover;">
					<div class="card-body">
						<h5 class="card-title">@book.Title</h5>
						<p class="card-text"><strong>Автор:</strong> @book.Author</p>
						<p class="card-text"><strong>Жанр:</strong> @book.Genre</p>
						<p class="card-text"><strong>Издателство:</strong> @book.Publisher</p>
						<p class="card-text">@book.Description?.Substring(0, Math.Min(book.Description.Length, 100))...</p>

						<div class="d-flex justify-content-between mt-3">
							<a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-outline-primary btn-sm">✏️ Редактирай</a>
							<a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-outline-danger btn-sm">🗑️ Изтрий</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
}